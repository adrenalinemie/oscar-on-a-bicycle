{{> head}}
{{> top}}
<div class="main {{#checkIf @config.custom.layoutMode '==' "flat" }} main--flat{{/checkIf}}">
   <div class="wrapper">
      <article class="page {{#checkIf @config.custom.layoutMode '==' "flat" }} page--flat page--flat-no-hero{{/checkIf}} search-page">
         <div class="post__inner">
            <header class="post__header">
               <h1 class="post__title">
                  {{ translate 'search.title' }}
               </h1>
               <form action="{{@website.searchUrl}}" class="search-page__form">
                  <input
                     type="search"
                     name="{{@config.custom.searchParam}}"
                     placeholder="{{ translate 'search.placeholder' }}"
                     class="search-page__input"/>
                   <button type="submit">{{ translate 'search.submit' }}</button>
               </form>
            </header>

            <script>
               (function () {
                  var cx = '{{@config.custom.searchId}}';
                  var gcse = document.createElement('script');
                  gcse.type  = 'text/javascript';
                  gcse.async = true;
                  gcse.src   = 'https://cse.google.com/cse.js?cx=' + cx;
                  var s = document.getElementsByTagName('script')[0];
                  s
                     .parentNode
                     .insertBefore(gcse, s);
               })();
            </script>
            <gcse:searchresults-only></gcse:searchresults-only>

         </div>
      </article>
   </div>
</div>
{{> footer}}

